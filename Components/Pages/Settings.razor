@page "/settings"
@inject ISecurityService Security

<div class="max-w-xl mx-auto backdrop-blur-xl bg-white/5 rounded-2xl p-8 animate-page">

    <h1 class="text-xl font-bold mb-6">Security</h1>

    <input type="password"
           placeholder="Set PIN"
           class="bg-black/40 p-3 rounded w-full"
           @bind="pin" />

    <button @onclick="Enable"
            class="mt-4 px-6 py-3 bg-indigo-600 rounded-xl">
        Enable Lock
    </button>

</div>

@code {
    string pin = "";

    async Task Enable()
    {
        await Security.EnablePinAsync(pin);
        pin = "";
    }
}
